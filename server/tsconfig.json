{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/tests/**",
    "src/__mocks__/**",
    "**/__mocks__/**",
    "dist"
  ]
} 